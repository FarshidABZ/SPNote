<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="310dp"
    android:background="@color/midnight"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:text="@string/text_style"
        android:textColor="@color/white"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/imgRegular"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="24dp"
            android:background="@drawable/circle_midnight"
            android:padding="12dp"
            app:srcCompat="@drawable/ic_regular" />

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/imgItalic"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="24dp"
            android:background="@drawable/circle_midnight"
            android:padding="8dp"
            app:srcCompat="@drawable/ic_format_italic_white" />

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/imgBold"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="24dp"
            android:background="@drawable/circle_midnight"
            android:padding="8dp"
            app:srcCompat="@drawable/ic_format_bold_white" />

    </LinearLayout>

    <include layout="@layout/content_color_style" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="bottom"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#29ffffff" />

        <TextView
            android:id="@+id/tvTextStyleApply"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@color/mainPageActivityAccent"
            android:layout_gravity="bottom"
            android:gravity="center"
            android:text="@string/done"
            android:textColor="@color/white"
            android:textSize="14sp" />

    </LinearLayout>

</LinearLayout>